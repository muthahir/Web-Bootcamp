<%- include("../partials/header")%>
<%- include("../partials/navbar")%>



<div class="container" style="margin-top:3rem;width:80vw">
 
            <form class="validated-form" action="/posts/<%=post._id%>?_method=PATCH" method="POST" style="max-width:70%;margin:10px auto" novalidate>
                <div class="mb-3">
                  <label for="name" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" placeholder="Post Name" name="post[title]" value="<%=post.title%>" required>
                  
                </div>
                <div class="mb-3">
                  <label for="img" class="form-label">Image URL</label>
                  <input type="text" class="form-control" id="img" placeholder="Image URL" name="post[img]" value="<%=post.img%>" required>
                </div>
               
        
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" id="desc" cols="30" rows="5" name="post[desc]" required><%=post.desc%>"</textarea>
                </div>
               
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        
   
</div>

<%- include("../partials/footer")%>