<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container mt-5">

    <div class="row">
        <div class="col-lg-6">
            <div class="card" style="width: 25rem;">
                <img src="<%=post.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=post.name%></h5>
                
                  <p class="card-text"><%=post.desc%></p>
                 
                  <a href="/posts/<%=post._id%>/edit" class="btn btn-warning">Edit</a>
                  <div class="mt-3">
                    <form action="/posts/<%=post._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                  </form>
                  </div>
                 
                </div>
              </div>
        </div>
        <div class="col-lg-6">
            <h1>Leave a Review</h1>
            <form class="validated-form" action="/posts/<%=post._id%>/comment" method="POST" style="max-width:70%;" novalidate>
                <div class="mb-3">
                    <label for="comment" class="form-label">Name</label>
                    <input type="text" class="form-text" min="0" max="5" name="name" id="comment">
                </div>
            
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" id="desc" cols="35" rows="3" name="comment" required></textarea>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
               
                <button type="submit" class="btn btn-success">Submit</button>
              </form>

              <div class="mb-3 mt-3">
                <%for(let comment of post.comments){%>

                    <div class="card mb-3">
                        
                        <div class="card-body">
                          <h5 class="card-title">Name :<%=comment.name%></h5>
                          <p class="card-text"><%=comment.comment%></p>
                        </div>
                      </div>
    
                <%}%>
            </div>

        </div>

     

    </div>

</div>


<%- include("../partials/footer")%>
